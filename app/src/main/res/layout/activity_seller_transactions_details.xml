<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_bg">

    <include
        android:id="@+id/toolbar_seller_transactions"
        layout="@layout/custom_pharmacist_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_seller_transactions">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/height_10"
            android:layout_marginRight="@dimen/height_10"
            android:layout_below="@+id/toolbar_seller_transactions">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="Transaction Id: TR18392838399-Paid"
                android:textColor="@color/colorblack"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/height_10"/>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/height_8"
                app:cardElevation="@dimen/height_4"
                android:layout_marginTop="@dimen/height_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/height_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaction Information"
                        android:fontFamily="@font/open_sans_regular"
                        android:textColor="@color/colorblack"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Date:September 28, 2018"
                        android:layout_marginTop="@dimen/height_10"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/height_5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_regular"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Amount:"
                            android:layout_marginRight="@dimen/height_10"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_regular"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/rs_symbol_total_two_hundered"
                            android:textColor="@color/colorblack"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Type: Manual"
                        android:layout_marginTop="@dimen/height_5"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Method: Manual"
                        android:layout_marginTop="@dimen/height_5"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Method: Manual"
                        android:layout_marginTop="@dimen/height_5"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Comment Message: Payment for order #88898774"
                        android:layout_marginTop="@dimen/height_5"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="TRANSACTION ORDER INFORMATION"
                android:textColor="@color/colorblack"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/height_10" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/height_8"
                app:cardElevation="@dimen/height_4"
                android:layout_marginBottom="@dimen/height_15"
                android:layout_marginTop="@dimen/height_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/height_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Id #138293848362"
                        android:fontFamily="@font/open_sans_regular"
                        android:textColor="@color/colorblack"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="@dimen/height_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/open_sans_regular"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Product Name" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Horlicks Choco Powder"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="end"
                            android:textColor="@color/colorblack"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="@dimen/height_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/open_sans_regular"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Price" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Rs278.00"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="end"
                            android:textColor="@color/colorblack"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="@dimen/height_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/open_sans_regular"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Qty" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="1"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="end"
                            android:textColor="@color/colorblack"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="@dimen/height_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/open_sans_regular"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Total Price" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Rs278.00"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="end"
                            android:textColor="@color/colorblack"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="@dimen/height_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/open_sans_regular"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Total Tax" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Rs0.00"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="end"
                            android:textColor="@color/colorblack"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="@dimen/height_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/open_sans_regular"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Total Shipping" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Rs0.00"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="end"
                            android:textColor="@color/colorblack"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="@dimen/height_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/open_sans_regular"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Commission" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Rs0.00"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="end"
                            android:textColor="@color/colorblack"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="@dimen/height_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/open_sans_regular"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Sub Total" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Rs278.00"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="end"
                            android:textColor="@color/colorblack"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>