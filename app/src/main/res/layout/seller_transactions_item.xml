<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_my_orders"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/height_8"
    android:layout_marginBottom="@dimen/height_10"
    app:cardElevation="@dimen/height_4"
    android:layout_marginTop="@dimen/height_10">


    <LinearLayout
        android:id="@+id/rlayout_seller_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/height_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tranaction_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorblack"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Transaction Id: TR18392832835"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date:28/09/2018"
            android:layout_marginTop="@dimen/height_10"/>

        <TextView
            android:id="@+id/tv_comment_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Comment Message: Payment for order #88898774"
            android:layout_marginTop="@dimen/height_5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/height_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Transaction Amount:" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Rs200"
                android:textColor="@color/colorblack"
                android:layout_marginLeft="@dimen/height_10"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_view_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorblack"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="VIEW DETAILS"
            android:gravity="end"
            android:layout_marginTop="@dimen/height_10"/>

    </LinearLayout>
</android.support.v7.widget.CardView>