<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment"
    android:background="@color/colorlightlightlightGray"
    android:focusableInTouchMode="true">

   <android.support.v4.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/height_20">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorwhite"
                android:orientation="horizontal"
                android:padding="@dimen/height_10"
                android:weightSum="1">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_medicine"
                        android:layout_width="@dimen/height_50"
                        android:layout_height="@dimen/height_50"
                        android:src="@drawable/prescription" />
                </RelativeLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/height_10"
                    android:layout_toLeftOf="@+id/rlayout_upload"
                    android:layout_toRightOf="@+id/img_file"
                    android:layout_weight="0.55"
                    android:gravity="center"
                    android:text="Order with Prescription"
                    android:textColor="@color/colorblack"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:id="@+id/rlayout_upload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:gravity="end">

                    <Button
                        android:id="@+id/btn_upload"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Upload"
                        android:gravity="center"
                        android:textColor="@color/colorwhite"
                        android:background="@drawable/custom_btn_bg"/>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/rlayout_medicines"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/height_5"
                    android:layout_weight="0.5"
                    android:background="@drawable/custom_btn_bg_drackgray"
                    android:padding="@dimen/height_10">

                    <RelativeLayout
                        android:id="@+id/rl_medicines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/height_50"
                            android:layout_height="@dimen/height_50"
                            android:src="@drawable/capsules_home" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_medicines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_medicines"
                        android:gravity="center"
                        android:text="MEDICINES"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_medicines"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="100,000+ Medicines"
                        android:textColor="@color/coloryellow" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_5"
                    android:layout_weight="0.5"
                    android:background="@drawable/custom_btn_bg_drackgray"
                    android:padding="@dimen/height_10">

                    <RelativeLayout
                        android:id="@+id/rlayout_lab_tests"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/height_50"
                            android:layout_height="@dimen/height_50"
                            android:src="@drawable/test_tubes" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_lab_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlayout_lab_tests"
                        android:gravity="center"
                        android:text="LAB TESTS"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_lab_test"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Free sample Collection"
                        android:textColor="@color/coloryellow" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/relInstaOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/height_5"
                    android:layout_weight="0.5"
                    android:background="@drawable/custom_btn_bg_drackgray"
                    android:padding="@dimen/height_10">

                    <RelativeLayout
                        android:id="@+id/rlayout_quick_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/height_50"
                            android:layout_height="@dimen/height_50"
                            android:src="@drawable/cardboxes" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_quick_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlayout_quick_order"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="INSTA ORDERS"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_quick_order"
                        android:gravity="center"
                        android:text="65,000+ Products"
                        android:textColor="@color/coloryellow" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_5"
                    android:layout_weight="0.5"
                    android:background="@drawable/custom_btn_bg_drackgray"
                    android:padding="@dimen/height_10">

                    <RelativeLayout
                        android:id="@+id/rlayout_econsultation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/height_50"
                            android:layout_height="@dimen/height_50"
                            android:src="@drawable/doctor" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_econsultation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlayout_econsultation"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="E-CONSULTATION"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_econsultation"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Chat for Free"
                        android:textColor="@color/coloryellow" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:text="FEATURED PRODUCTS"
               android:textColor="@color/colorblack"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10" />


            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/sliderAdvertise"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/height_10"
                android:scaleType="fitXY"
                android:visibility="visible" />


            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider_contactus"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/height_10"
                android:scaleType="fitXY"
                android:visibility="visible" />
        </LinearLayout>
   </android.support.v4.widget.NestedScrollView>
</RelativeLayout>