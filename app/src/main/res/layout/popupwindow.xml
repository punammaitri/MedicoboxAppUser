<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_detail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/height_10"
    android:layout_marginRight="@dimen/height_10"
    android:layout_marginTop="@dimen/height_10"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/height_10"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/height_10">

        <LinearLayout
            android:id="@+id/linearMoveAllToWishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_8"
            android:layout_marginRight="@dimen/height_8"
            android:layout_marginTop="@dimen/height_5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxHeight="78dp"
                android:maxWidth="78dp"
                android:src="@drawable/edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/height_13"
                android:text="Move All to Wishlist"
                android:fontFamily="@font/open_sans_regular"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="@dimen/height_8"
            android:background="@color/colorlightlightGray" />


        <LinearLayout
            android:id="@+id/linearDeleteWishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/height_5"
            android:layout_marginLeft="@dimen/height_8"
            android:layout_marginRight="@dimen/height_8"
            android:layout_marginTop="@dimen/height_5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxHeight="78dp"
                android:maxWidth="78dp"
                android:src="@drawable/plus_symbol" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/height_13"
                android:text="Delete Wishlist"
                android:fontFamily="@font/open_sans_regular"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>