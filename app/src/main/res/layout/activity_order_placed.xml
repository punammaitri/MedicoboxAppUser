<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OrderPlacedActivity"
    android:background="@color/color_gray_bg">


    <include layout="@layout/custom_toolbar"
        android:id="@+id/layout_custom_toolbar"/>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_custom_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_10"
            android:layout_marginRight="@dimen/height_10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_thank_you"
                    android:layout_width="@dimen/height_50"
                    android:layout_height="@dimen/height_50"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/height_30"
                    android:background="@drawable/check" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_thank_you"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_15"
                android:gravity="center"
                android:text="Thank You!"
                android:fontFamily="@font/open_sans_regular"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_order_placed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_8"
                android:gravity="center"
                android:fontFamily="@font/open_sans_regular"
                android:text="Order Placed Successfully"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_15"
                android:fontFamily="@font/open_sans_regular"
                android:layout_marginTop="@dimen/height_8"
                android:gravity="center"
                android:text="Your chosen Payment Mode: PayTM"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_order_placed"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/height_15"
                android:fontFamily="@font/open_sans_regular"
                android:layout_marginTop="@dimen/height_8"
                android:gravity="center"
                android:text="Paid: Rs.350"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/height_10"
                android:background="@color/colorblack"
                android:layout_marginRight="@dimen/height_55"
                android:layout_marginLeft="@dimen/height_55"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_8"
                android:gravity="left"
                android:fontFamily="@font/open_sans_regular"
                android:text="Order ID: MB12838492829"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/height_10"
                android:layout_marginRight="@dimen/height_10"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/height_8"
                app:cardElevation="@dimen/height_4"
                android:layout_marginTop="@dimen/height_10">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_order_placed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/height_10"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/height_8"
                app:cardElevation="@dimen/height_4"
                android:layout_marginTop="@dimen/height_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/height_10"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="View Attached Prescriptions (1)"
                        android:textColor="@color/colorblack"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1">

                        <ImageView
                            android:layout_width="@dimen/height_25"
                            android:layout_height="@dimen/height_25"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/height_15"
                            android:src="@drawable/arrow_yellow" />

                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="@dimen/height_8"
                app:cardElevation="@dimen/height_4"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/height_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="M.R.P Total"
                            android:fontFamily="@font/open_sans_regular"
                            />

                        <TextView
                            android:id="@+id/tv_mrp_total"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:gravity="end"
                            android:fontFamily="@font/open_sans_regular"
                            android:text="Rs350"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_10"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:fontFamily="@font/open_sans_regular"
                            android:text="Price Discount"
                            />

                        <TextView
                            android:id="@+id/tv_price_discount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:gravity="end"
                            android:fontFamily="@font/open_sans_regular"
                            android:text="-Rs30"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_10"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:fontFamily="@font/open_sans_regular"
                            android:text="Shipping Charges"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="end"
                            android:fontFamily="@font/open_sans_regular"
                            android:text="As per delivery address"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_10"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:fontFamily="@font/open_sans_regular"
                            android:text="To be paid"
                            android:textColor="@color/colorblack"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <TextView
                            android:id="@+id/tv_amount_paid"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:gravity="end"
                            android:fontFamily="@font/open_sans_regular"
                            android:text="Rs350.0"
                            android:textColor="@color/colorblack"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/height_10"
                        android:background="@color/colorlightlightGray" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_20"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/height_10"
                            android:fontFamily="@font/open_sans_regular"
                            android:text="Total Savings"
                            android:textColor="@color/colorblack" />

                        <TextView
                            android:id="@+id/tv_total_saved"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_regular"
                            android:text="Rs30.0"
                            android:textColor="@color/colorgreen"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:fontFamily="@font/open_sans_regular"
                android:text="Delivery Address"
                android:textColor="@color/colorblack"
                android:layout_marginLeft="@dimen/height_10"
                android:layout_marginRight="@dimen/height_10"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"/>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="@dimen/height_8"
                app:cardElevation="@dimen/height_4"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/height_10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_10"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="Shreya Saran"
                        android:textColor="@color/colorblack"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_10"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="@string/address" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/btn_my_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/height_20"
                android:fontFamily="@font/open_sans_regular"
                android:layout_marginLeft="@dimen/height_30"
                android:layout_marginRight="@dimen/height_30"
                android:layout_marginTop="@dimen/height_20"
                android:background="@drawable/custom_btn_bg"
                android:text="Go to my orders"
                android:textAllCaps="true"
                android:textSize="@dimen/height_16"
                android:textColor="@android:color/white"
                android:textStyle="bold" />






        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>