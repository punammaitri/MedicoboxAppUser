<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/height_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/relCheckout"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_tab_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_5"
                android:layout_toLeftOf="@+id/img_Info"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="1"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorblack" />

            <ImageView
                android:id="@+id/img_Info"
                android:layout_width="@dimen/height_23"
                android:layout_height="@dimen/height_23"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/height_10"
                android:src="@drawable/ic_info" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relCheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/height_5"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/height_10"
                android:background="@drawable/rounded_textview"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/colorblack"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/height_10"
                android:layout_toRightOf="@+id/tv_minus"
                android:fontFamily="@font/open_sans_regular"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorblack" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/height_5"
                android:layout_toRightOf="@+id/tv_value"
                android:background="@drawable/rounded_textview"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/colorblack"
                android:textSize="15sp" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view_sublist"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="@dimen/height_5"
        android:layout_marginTop="@dimen/height_6"
        android:layout_marginRight="5dp"
        android:background="@color/colorfaintblack" />

</LinearLayout>
