<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/height_8"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/height_10"
    app:cardElevation="@dimen/height_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/height_10">

            <TextView
                android:id="@+id/tv_Order_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text="Order Id:"
                android:textAllCaps="true"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtOrderID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_5"
                android:layout_toRightOf="@+id/tv_Order_ID"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="@dimen/height_6"
            android:background="@color/colorfaintblack" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/SubList"
            android:padding="@dimen/height_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_5"
            android:layout_marginLeft="@dimen/height_8"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.43"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text="Customer Name"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text=":"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.52"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text="Shreya Saran"
                android:textColor="@color/colorblack"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_8"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.43"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text="Order Date"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text=":"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.52"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text="29/9/2018"
                android:textColor="@color/colorblack"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_8"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.43"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text="Order Total"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text=":"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.52"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text="@string/rs_symbol_seller"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_8"
            android:padding="@dimen/height_10"
            android:layout_marginBottom="@dimen/height_8">

            <Button
                android:id="@+id/btn_processing"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_35"
                android:background="@drawable/border_rectangle"
                android:fontFamily="@font/open_sans_regular"
                android:paddingLeft="@dimen/height_15"
                android:paddingRight="@dimen/height_15"
                android:text="Processing"
                android:textAllCaps="false"
                android:textColor="@color/color_sky_blue"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_view_detail"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_35"
                android:layout_alignParentEnd="true"
                android:background="@drawable/custom_btn_bg"
                android:fontFamily="@font/open_sans_regular"
                android:paddingLeft="@dimen/height_15"
                android:paddingRight="@dimen/height_15"
                android:text="View Details"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>