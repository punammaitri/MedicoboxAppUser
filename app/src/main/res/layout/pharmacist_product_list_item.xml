<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/height_5"
    android:layout_marginTop="@dimen/height_3"
    android:layout_marginRight="@dimen/height_5"
    android:layout_marginBottom="@dimen/height_5"
    android:background="@color/color_gray_bg"
    app:cardCornerRadius="@dimen/height_8"
    app:cardElevation="@dimen/height_8">


    <LinearLayout
        android:id="@+id/llayout_listing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.15"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_medicine"
                android:layout_width="@dimen/height_50"
                android:layout_height="@dimen/height_70"
                android:src="@drawable/bottle" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_medicine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="abc"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorblack"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="Rs200.00"
                android:textColor="@color/colorblack" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="Type: Simple" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="Status: Enable" />

            <TextView
                android:id="@+id/tv_status_confirmed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="Qty. Confirmed : 0" />

            <TextView
                android:id="@+id/tv_status_pending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="Qty. Pending : 3" />

            <TextView
                android:id="@+id/tv_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="Qty. Sold : 3" />

            <TextView
                android:id="@+id/tv_earned_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="Earned Amount: Rs.0.00" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="center|top"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="@dimen/height_20"
                android:layout_height="@dimen/height_20"
                android:layout_marginTop="@dimen/height_10"
                android:src="@drawable/delete" />

            <ImageView
                android:layout_width="@dimen/height_20"
                android:layout_height="@dimen/height_20"
                android:layout_marginTop="@dimen/height_10"
                android:src="@drawable/edit" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>