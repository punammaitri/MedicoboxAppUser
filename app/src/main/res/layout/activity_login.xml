<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/height_50"
            android:layout_marginTop="@dimen/height_25"
            android:layout_marginRight="@dimen/height_50"
            android:layout_marginBottom="@dimen/height_25"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/applogo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_20"
            android:layout_marginRight="@dimen/height_20"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextLabel">

                <EditText
                    android:id="@+id/edt_mobile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_regular"
                    android:hint="Email / Mobile Number"
                    android:inputType="text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextLabel">

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_regular"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tv_forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="right"
                android:text="Forgot Password?" />

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/height_30"
                android:layout_marginTop="@dimen/height_10"
                android:layout_marginRight="@dimen/height_30"
                android:background="@drawable/custom_btn_bg"
                android:fontFamily="@font/open_sans_regular"
                android:text="Sign In"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/height_16"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_50"
                android:layout_marginTop="@dimen/height_10"
                android:layout_marginRight="@dimen/height_50"
                android:orientation="horizontal"
                android:weightSum="3">


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.1"
                    android:background="@color/colorGray" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="center"
                    android:text="OR"
                    android:textColor="@color/colorblack"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.1"
                    android:background="@color/colorGray" />
            </LinearLayout>

            <!-- <Button
                 android:id="@+id/btn_sign_in_withotp"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/height_45"
                 android:layout_marginLeft="@dimen/height_20"
                 android:layout_marginRight="@dimen/height_20"
                 android:layout_gravity="center"
                 android:layout_marginTop="@dimen/height_10"
                 android:background="@drawable/custom_btn_bg"
                 android:text="Sign In with OTP"
                 android:textAllCaps="true"
                 android:textColor="@color/colorwhite"
                 android:textAppearance="?android:attr/textAppearanceMedium"
                 />
     -->
            <TextView
                android:id="@+id/tv_sign_in_withotp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/height_30"
                android:layout_marginTop="@dimen/height_10"
                android:layout_marginRight="@dimen/height_30"
                android:background="@drawable/custom_btn_bg"
                android:clickable="true"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:text="Sign In with OTP"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/height_16"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_50"
                android:layout_marginTop="@dimen/height_15"
                android:layout_marginRight="@dimen/height_50"
                android:orientation="horizontal"
                android:weightSum="3">


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.1"
                    android:background="@color/colorGray" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="center"
                    android:text="OR"
                    android:textColor="@color/colorblack"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.1"
                    android:background="@color/colorGray" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/fb_login_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/height_30"
                android:layout_marginTop="@dimen/height_15"
                android:layout_marginRight="@dimen/height_30"
                android:background="@drawable/custom_btn_bg_broder"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_25"
                    android:layout_height="@dimen/height_25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/facebook" />

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/btnfblogin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="Sign In with Facebook"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/height_16"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/goglayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/height_30"
                android:layout_marginTop="@dimen/height_15"
                android:layout_marginRight="@dimen/height_30"
                android:background="@drawable/custom_btn_bg_red"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_25"
                    android:layout_height="@dimen/height_25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/google_plus" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="Sign In with Google"
                    android:textColor="@color/colorred"
                    android:textSize="@dimen/height_16"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_20"
                android:layout_marginBottom="@dimen/height_20"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="Don't have an account? "
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/tv_sign_up_here"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="Sign Up here"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
