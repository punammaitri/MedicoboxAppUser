<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <android.support.v7.widget.CardView
        android:id="@+id/cardLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/height_8"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/height_5"
        app:cardElevation="@dimen/height_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/height_5">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_15"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="center"
                    android:text="Product Information"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorblack" />

                <ImageView
                    android:id="@+id/imgDelete"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/height_15"
                    android:background="@drawable/rx" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtTabName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:text="Tab Evion 400mg"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorblack"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTabSubName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:text="@string/tabSubname"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txtTabBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:text="by LincoIn Pharmacuticals"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/imgPill"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/height_8"
                android:background="@drawable/settings" />


            <RelativeLayout
                android:id="@+id/rel_pricing"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/height_5"
                android:padding="@dimen/height_5">

                <TextView
                    android:id="@+id/txtEmpty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="center|bottom"
                    android:text="  " />


                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_8"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@+id/txtEmpty"
                    android:fontFamily="@font/open_sans_regular"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorblack" />


            </RelativeLayout>

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans_regular"
                android:text="10 tablet sr in 1 strip"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/txtSuppliment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:text="@string/text_suppliment"
                android:textAppearance="?android:attr/textAppearanceSmall" />


            <RelativeLayout
                android:id="@+id/rel_more_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_5"
                android:padding="@dimen/height_5">

                <TextView
                    android:id="@+id/txtMoreInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/height_15"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="More Information"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/coloryellow"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_forward_arrow"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/height_5"
                    android:layout_toRightOf="@+id/txtMoreInfo"
                    android:background="@drawable/ic_arrow_right_yellow" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img_forward_arrow"
                    android:background="@drawable/ic_arrow_right_yellow" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/height_5"
                android:layout_marginRight="@dimen/height_30"
                android:layout_marginBottom="@dimen/height_5"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center|start"
                android:padding="@dimen/height_3"
                android:text="Ok"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimary" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>