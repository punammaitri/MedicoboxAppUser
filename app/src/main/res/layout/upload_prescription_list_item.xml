<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="160dp"
    android:layout_marginLeft="@dimen/height_15">

    <ImageView
        android:id="@+id/imgOption"
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:layout_marginTop="@dimen/height_15"
        android:background="@color/divider_bg"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="@dimen/height_30"
        android:layout_height="@dimen/height_30"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="@dimen/height_6"
        android:background="@drawable/bg_border_circle"
        android:scaleType="center"
        android:src="@drawable/icons_delete" />

</FrameLayout>